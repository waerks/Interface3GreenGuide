{% include "header/header.html.twig" %}

<section>
	<div class="container">
		<section id="recetteATitre">
			<div class="divTitre">
				<h2>Poster votre recette</h2>
			</div>
		</section>
		<section id="recetteAjout">
			{{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
			<h3>Présentation</h3>
			<hr>
			{{ form_label(form.nom, 'Nom de votre recette') }}
			{{ form_widget(form.nom, {'attr': {'class': 'input'}}) }}

			{# <label for="file">Photo de votre recette</label>
						<input type="file" name="file" id="file" class="input" required> #}

			{{ form_label(form.image, 'Image') }}
			{{ form_widget(form.image, {'attr': {'class': 'input'}}) }}


			{{ form_label(form.conseil, 'Votre conseil') }}
			{{ form_widget(form.conseil, {'attr': {'class': 'input'}}) }}

			<h3>Ingrédients</h3>
			<hr>
			{{ form_label(form.nombreDePersonnes, 'Nombre de personnes') }}
			{{ form_widget(form.nombreDePersonnes, {'attr': {'class': 'input'}}) }}


			{{ form_label(form.ingredients, 'Ingredients') }}

			<ul class="ingredients" data-prototype="{{ form_widget(form.ingredients.vars.prototype)|e('html_attr') }}" data-index="{{ form.ingredients|length }}">
				{% for ingredient in form.ingredients %}
					<li>
						{{ form_row(ingredient) }}
						<button type="button" class="remove-ingredient">Remove Ingredient</button>
					</li>
				{% endfor %}
			</ul>

			{# <div id="ingredientsContainer">
									                    <label for="ingre">Ajouter des ingrédients</label>
									                    <div>
									                        <input type="text" name="form[ajoutIngre[]]" class="input" id="ingre">
									                    </div>
									                </div>
									                <button type="button" class="addIngredientBtn" id="secondBtn">Ajouter un ingrédient</button> #}

			<h3>Pratique</h3>
			<hr>
			{{ form_label(form.tempsDePreparation, 'Temps de préparation (minutes)') }}
			{{ form_widget(form.tempsDePreparation, {'attr': {'class': 'input'}}) }}
			{{ form_label(form.tempsDeCuisson, 'Temps de cuisson (minutes)') }}
			{{ form_widget(form.tempsDeCuisson, {'attr': {'class': 'input'}}) }}

			<h3>Préparation</h3>
			<hr>
			{# <div id="etapesContainer">
							<label for="etape">Description de l'étape</label>
							<div>
								<textarea name="etape[]" class="input" id="etape"></textarea>
							</div>
						</div>
						<button type="button" class="addEtapeBtn" id="secondBtn">Ajouter une étape</button> #}

			<button type="submit" id="mainBtn">Poster</button>
			{{ form_end(form) }}
		</section>
	</div>
</section>

{% include "footer/footer.html.twig" %}
