                    <input type="email" name="newsletters" id="input">
                    <label for="message">Votre message</label>
                    <textarea name="message" id="message"></textarea>
                    <button type="submit" id="mainBtn">
                        <a href="#contact">Envoyer</a>
                    </button>              
